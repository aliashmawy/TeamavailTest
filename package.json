{
  "name": "teamavail-test",
  "version": "1.0.0",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "ci": "npm run format:check && npm run lint && npm run test && npm run build",
    "build": "echo 'Build completed - ready for Docker'"
  },
  "keywords": [
    "express",
    "nodejs",
    "docker"
  ],
  "author": "",
  "license": "ISC",
  "description": "Team Availability Test Application",
  "dependencies": {
    "express": "^4.18.2",
    "body-parser": "^1.20.2",
    "pg": "^8.11.3",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "nodemon": "^3.0.3"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/src/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}